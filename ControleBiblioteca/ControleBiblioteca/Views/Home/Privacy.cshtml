@{
    ViewData["Title"] = "Renovação de Livro";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Renovação de Livro 📚</h2>

    <div class="card shadow p-4 text-center">
        <p>Ao clicar no botão abaixo, a bibliotecária será notificada da renovação.</p>

        <form method="post" asp-action="RenovarLivro" asp-controller="Home">
            <button class="btn btn-primary btn-lg" type="submit">
                🔄 Renovar Livro
            </button>
        </form>

        @if (TempData["Mensagem"] != null)
        {
            <div class="alert alert-success mt-3">
                @TempData["Mensagem"]
            </div>
        }
    </div>

</div>

